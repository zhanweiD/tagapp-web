.add-group
  .ant-btn:hover, .ant-btn:focus
    color rgba(0,0,0,.65)  
  .create-flex:not(.noClick)
    display flex
    align-items center
    cursor pointer
    height 154px
    margin-bottom 32px
    padding 24px
    background-color rgba(243,244,249,.4)
    box-sizing border-box
    white-space break-spaces
    text-align left

    .create-icon
      margin-right 32px
    .create-type
      .create-group
        color rgba(0,0,0,.85)
        font-size 14px
        font-weight 500 
        .create-descr
          color rgba(0,0,0,.65) 

.drawer-create
  .drawer-footer
    margin-left 446px
    .footer-btn 
      margin-left 8px
  .ant-form-item-label
    text-align right !important

.page-group
  height 100%
  .list-content
    margin 16px
    background-color #ffffff
    min-height calc(100% - 88px)

.page-unit
  height 100%
  .list-content
    margin 16px
    background-color #ffffff
    min-height 100%

    .button-box
      margin-top 24px
