.show-label
  height 100% 
  .label-header
    display flex
    justify-content space-between
    .search-df
      display flex
      font-size 12px
      color rgba(0,0,0,.65)

  .label-main
    height 100%
    .label-sider
      height calc(100% - 32px)
      background #fff
      .sidebar-header
        font-size 14px
        height 45px
        line-height 45px
        padding-left 24px
        box-sizing border-box
        border-bottom 1px solid #f0f0f0

    .label-content
      height 100%
      background #fff
      margin-left 0
      .label-tab
        .ant-tabs-bar
          padding-left 24px
          .ant-tabs-tab
            font-size 14px

        .label-btn
          background-color rgba(32,150,255,.15)
          border 0
          border-radius 16px
          margin 8px 8px 8px 0px
          $:hover
            background-color #2096ff
            box-shadow 0px 2px 6px 0px rgba(99,157,209,1)
            border-radius 16px
            color #fff
.ant-progress-text
  color #fff