.button-style
  color #0078FF
  cursor pointer
  border 0
  background transparent
  outline none
  font-size 12px
  display inline-block

.button-style-hover
  color: rgba(0,0,0,0.45)
  cursor pointer
  border 0
  background transparent
  outline none
  font-size 12px
  display inline-block
  transition all .5s

.button-style-hover:hover
  color #0078FF
  transition all .5s

.button-style-hover.active
