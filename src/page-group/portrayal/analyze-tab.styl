.analyze-content
  display flex 

  .centered 
    display none

  .gnode text 
    color #ffffff
    text-anchor middle
    
  text 
    fill #ffffff
    text-anchor middle
    font-family sans-serif
    pointer-events none
  
    
  .node-rect 
    min-width 100px
    color #ffffff
    /* background #00D5AF */
    border-radius 20px
    /* display inline-block  */
    padding 2px 15px
  

  .node-text 
    text-align center
    overflow hidden
    text-overflow ellipsis
    word-break keep-all
    white-space nowrap

  .node-hidden
    display none

  .ant-progress-text
    color rgba(0, 0, 0, .65)
    

  .person 
    position relative
    width calc(100% - 300px)
    overflow hidden

    .svg-box
      width 700px
      height 700px
      margin -30px auto 0
      position relative

      img 
        width 300px
        height 300px
        position absolute
        // top 150px
        top 50%
        margin-left -150px
        margin-top -150px
        border-radius 50%
    
    svg 
      margin 0 auto

  
  .analyze-ratio
    width 230px
    padding 16px
    background rgba(0,0,0,0.02)
    margin-left 50px
  